<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000000"
        android:orientation="vertical"
        android:padding="50px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30px"
            android:layout_marginBottom="10px"
            android:fontFamily="courier"
            android:gravity="center"
            android:text="TekaHackAndSecure"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <Button
                android:id="@+id/encrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:fontFamily="courier"
                android:text="Encryption (120620ENC)" />

            <Button
                android:id="@+id/decrypt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:fontFamily="courier"
                android:text="Decryption (120620ENC" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <Button
                android:id="@+id/websitecheck"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:fontFamily="courier"
                android:text="CheckWebsite" />

            <Button
                android:id="@+id/wifihack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:fontFamily="courier"
                android:text="WiFiHack"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <Button
                android:id="@+id/ipget3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:fontFamily="courier"
                android:text="IPGET" />

            <Button
                android:id="@+id/getlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:layout_weight="1"
                android:fontFamily="courier"
                android:text="CurrentLoc" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50px"
            android:layout_marginLeft="50px"
            android:layout_marginEnd="50px"
            android:layout_marginRight="50px"
            android:fontFamily="courier"
            android:text="If WIFIHACK is crashing,  click clear all cache to fix."
            android:textColor="@color/white"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10px">

            <Button
                android:id="@+id/clearcache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20px"
                android:fontFamily="courier"
                android:text="Clear All Cache" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="50px"
            app:srcCompat="@drawable/logohackfest" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>